#include <stdio.h>
#include <stdlib.h>

int main()
{

    /*
        Escrever um programa que
        (a) leia um conjunto de 10 notas, armazenando-as em vetor,
        (b) calcule e imprima a sua média,
        (c) calcule e imprima o número de alunos com nota superior à média
    */

    float lista1[10];
    float cont = 0;
    float media;
    int cont2 = 0;
    int cont3  =  0;

    for(int i = 0; i < 10; i++){
        printf("indice %i - digite a nota: ", i + 1);
        scanf("%f", &lista1[i]);
    }

    for(int a = 0; a < 10; a++){
        cont += lista1[a];
    }

    media = cont / 10;

    printf("\nA media das notas é %0.1f\n", media);

    for(int r = 0; r < 10; r++){
        if(lista1[r] > media){
            cont2 += 1;
        }
    }

    float lista2[cont2];
    int lista3[cont2];

    for(int s = 0; s < 10; s++){
        if(lista1[s] > media){
            lista2[cont3] = lista1[s];
            lista3[cont3] = s;
            cont3 += 1;

        }
    }

    printf("Essa é a lista de notas que ficarão acima da média:\n");
    for(int t = 0; t < cont2; t++){
        printf("indice %i - %0.1f\n",lista3[t] + 1, lista2[t]);
    }

    return 0;
}
