#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>

int main()
{
    srand(time(NULL));

    int inteiros[100], numeroDigitado, cont = 0;

    for(int i = 0; i < 100; i++){
        inteiros[i] = rand() % 11;
    }

    printf("Digite um numero de 0 a 10: ");
    scanf("%i", &numeroDigitado);
    while(numeroDigitado > 10){
        printf("Opção invalida!!! Digite um numero de 0 a 10: ");
        scanf("%i", &numeroDigitado);
        getchar();
    }

    for(int e = 0; e < 100; e++){
        if(inteiros[e] == numeroDigitado){
            printf("%i - %i\n", e + 1, inteiros[e]);
            cont += 1;
        }
    }

    printf("O numero %i que voce digitou apareceu %i vezes!!", numeroDigitado, cont);



    return 0;
}
