#include <stdio.h>
#include <stdlib.h>

int main()
{

    int numero = 1;
    int num1 = 0;
    int num2 = 0;
    int num3 = 0;
    int num4 = 0;
    int maior = 0;
    int menor = 100000;

    while(numero != 0){
        printf("Digite: ");
        scanf("%i", &numero);
        getchar();
        num1 += 1;
        num2 += numero;
        if(numero > maior){
            maior = numero;
        }
        if(numero < menor && numero != 0){
            menor = numero;
        }
        if(numero % 2 == 0){
            num3 += 1;
            num4 += numero;
        }
    }

    printf("\nA soma dos números digitados = %i", num2);
    printf("\nA quantidade de números digitados = %i", num1);
    printf("\nA média dos números digitados = %i", num2 / (num1 - 1));
    printf("\nO maior número digitado = %i", maior);
    printf("\nO menor número digitado = %i", menor);
    printf("\nA média dos números pares = %i", num4 / (num3 - 1));


    return 0;
}
